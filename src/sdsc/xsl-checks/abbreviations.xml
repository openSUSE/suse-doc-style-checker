<?xml version="1.0" encoding="UTF-8"?>
<terminology ignoredwords="[A-Z]{8,}">

<!--
(Novl Styleguide)
Latin Abbreviations
+ Do not use any Latin abbreviations.
+ Use the English equivalents listed in the following table in place of Latin abbreviations:
Latin           English Equivalent
e.g.            for example, such as, as in
et al.          and the rest, and others
etc., et cetera including, and so forth
ibid            already referenced, in the same place
i.e.            that is
N.B.            note
q.v.            see
re              concerning, about, in reference to
viz.            namely
vs.             against, compared to, compared with, versus

tekom
min., max.

 -->


  <term>
    <accept>
      <proposal>around</proposal>
    </accept>
    <patterngroup>
      <pattern case="keep">[Cc]a\.</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>as soon as possible</proposal>
    </accept>
    <patterngroup>
      <pattern>asap</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>at the moment</proposal>
    </accept>
    <patterngroup>
      <pattern>atm</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>compared to</proposal>
    </accept>
    <patterngroup>
      <pattern>v(/|s\.?)</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>and others</proposal>
    </accept>
    <patterngroup>
      <pattern>et</pattern>
      <pattern>al\.?</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>in the same place</proposal>
    </accept>
    <patterngroup>
      <pattern>ibid\.?</pattern>
    </patterngroup>
  </term>

  <!-- We cast an extra-wide net for i.e. and e.g. because those are used so
  often, even by speakers that are less proficient. -->
  <term>
    <accept>
      <proposal>for example</proposal>
    </accept>
    <patterngroup>
      <pattern>e\.?g\.?</pattern>
    </patterngroup>
    <patterngroup>
      <pattern>e\.</pattern>
      <pattern>g\.?</pattern>
    </patterngroup>
    <patterngroup>
      <pattern>f\.[ie]\.?</pattern>
    </patterngroup>
    <patterngroup>
      <pattern>f\.</pattern>
      <pattern>[ie]\.</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>note</proposal>
    </accept>
    <patterngroup>
      <pattern>n\.b\.?</pattern>
    </patterngroup>
    <patterngroup>
      <pattern case="keep">NB</pattern>
    </patterngroup>
    <patterngroup>
      <pattern>n\.</pattern>
      <pattern>b\.</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>see</proposal>
    </accept>
    <patterngroup>
      <pattern>q\.v\.?</pattern>
    </patterngroup>
    <patterngroup>
      <pattern>q\.</pattern>
      <pattern>v\.</pattern>
    </patterngroup>
  </term>

  <!-- We cast an extra-wide net for i.e. and e.g. because those are used so
  often, even by speakers that are less proficient. -->
  <term>
    <accept>
      <proposal>that is</proposal>
    </accept>
    <patterngroup>
      <!-- IE might also be Internet Explorer, so let's avoid flagging that here. -->
      <pattern case="keep">[Ii]\.?e\.?</pattern>
    </patterngroup>
    <patterngroup>
      <pattern>i\.e\.?</pattern>
    </patterngroup>
    <patterngroup>
      <pattern>i\.</pattern>
      <pattern>e\.?</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>concerning</proposal>
    </accept>
    <patterngroup>
      <pattern>re[\.:]?</pattern>
    </patterngroup>
  </term>

  <term>
    <accept>
      <proposal>respectively</proposal>
    </accept>
    <patterngroup>
      <pattern>resp\.?</pattern>
    </patterngroup>
  </term>

  <term>
    <accept/>
    <patterngroup>
      <pattern>(im((ns)?h)?o|afai(c[ts]|k)|ftfy|lol|rofl|idk|yolo|z?omg|jk|ymmv|tia)</pattern>
    </patterngroup>
  </term>

</terminology>
